{
  "name": "cypress-selectors",
  "version": "0.3.1",
  "description": "Set of convenient decorators for declarative querying DOM elements via Cypress",
  "homepage": "https://github.com/anton-kravchenko/cypress-selectors#readme",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "prepare": "npm run ci",
    "prebuild": "npm run clean",
    "build": "webpack",
    "lint": "eslint '**/*.ts'",
    "type-check": "tsc --project tsconfig.json",
    "unit": "CI=true jest",
    "unit:watch": "jest --watch",
    "pretest:coverage": "npm run clean",
    "unit:coverage": "jest --coverage",
    "start-test-page": "serve TestPage/ -p 5333",
    "e2e:open": "start-server-and-test start-test-page 5333 'cypress open'",
    "e2e:run": "start-server-and-test start-test-page 5333 'cypress run --browser chrome'",
    "e2e:run:ci": "export BROWSER=none; start-server-and-test start-test-page 5333 'cypress run --browser chrome --headless'",
    "clean": "rimraf coverage dist",
    "test": "npm-run-all unit e2e:run:ci",
    "ci": "npm-run-all type-check lint test build"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anton-kravchenko/cypress-selectors.git"
  },
  "author": "https://github.com/anton-kravchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anton-kravchenko/cypress-selectors/issues"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "@types/cypress": "^1.1.3",
    "@types/lodash": "^4.14.161",
    "lodash": "^4.17.20",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.11.4"
  },
  "keywords": [
    "cypress",
    "cypress-selectors"
  ]
}
