{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["esnext", "DOM"],
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src", "cypress"]
}
